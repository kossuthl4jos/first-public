{
  "parser": "babel-eslint",
  "extends": "vue",
  "plugins": [ "html" ],
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],

    "brace-style": ["warn", "stroustrup", { "allowSingleLine": true }],
    "max-len": ["warn", 140, 2, { "ignoreComments": true }],
    "no-unused-vars": "warn",
    "object-curly-spacing": ["warn", "always"],
    "operator-linebreak": ["warn", "after"],
    "prefer-const": "warn",

    "no-path-concat": "off"
  }
}
